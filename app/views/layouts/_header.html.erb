<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav nav-pills navbar-nav">
        <li><%= link_to t("links.home"), root_path %></li>
        <li><%= link_to t("links.word_list"), words_path %></li>
        <li><%= link_to t("links.categories"), categories_path %></li>
        <li><%= link_to t("links.lesson"), lessons_path %></li>
      </ul>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("admin.manage_users"), admin_users_path %></li>
            <li><%= link_to t("admin.manage_categories"), admin_categories_path %></li>
          <% end %>
          <li><%= link_to t("static_pages.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to t("static_pages.account"), "#", class: "dropdown-toggle", 
              data: {toggle: "dropdown"} %>
            <ul class="dropdown-menu">
              <li><%= link_to t("links.user_show"), current_user %></li>
              <li><%= link_to t("static_pages.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("sessions.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to t("links.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
