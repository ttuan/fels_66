<%= form_tag categories_path, method: :get, remote: true,
   id: "search-form", class: "form-wrapper cf" do %>
  <%= text_field_tag :search_category, params[:search_category],
    placeholder: t("category.search_category"), class: "input_search" %>
  <%= submit_tag t("word.search"), class: "button_search" %>
<% end %>
