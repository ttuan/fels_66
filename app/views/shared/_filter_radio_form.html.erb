<div class="tm-radio">
  <% Settings.filter.each do |key, value| %>
    <%= label_tag value, class: "radio-inline" do %>
      <%= radio_button_tag :filter_state, value, 
        checked = (params[:filter_state] == value || params[:filter_state].blank?) %> 
      <%= value.titleize %>
    <% end %>
  <% end %>
</div>
