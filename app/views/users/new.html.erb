<% provide :title, t("sessions.signup") %>
<h1><%= t "user.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <br>
      <div class="row">
        <div class="col-md-5">
          <img id="user_image_signup" /> 
        </div>
        <div class="col-md-7">
          <span class="picture">
            <%= f.file_field :picture, accept: Settings.image_type_accept,
              onchange: "PreviewImage("user_image_signup");" %>
          </span>
        </div>
      </div>
      <br>
      
      <%= f.submit t "sessions.create_account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>